<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".FitLifeApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProjetIntegration"
        android:usesCleartextTraffic="true">
        
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        
        <activity
            android:name=".ui.activities.HomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".ui.activities.LoginActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        
        <activity
            android:name=".ui.activities.SignupActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        
        <activity
            android:name=".ui.activities.DashboardActivity"
            android:exported="false" />
        
        <activity
            android:name=".ui.activities.PlatsActivity"
            android:exported="false" />
        
        <activity
            android:name=".ui.activities.PlatDetailActivity"
            android:exported="false" />
        
        <activity
            android:name=".ui.activities.ProgrammesActivity"
            android:exported="false" />
        
        <activity
            android:name=".ui.activities.ProgrammeDetailActivity"
            android:exported="false" />
        
        <activity
            android:name=".ui.activities.MesProgrammesActivity"
            android:exported="false" />
        
        <activity
            android:name=".ui.activities.ProfileActivity"
            android:exported="false" />
        
        <activity
            android:name=".ui.activities.EditProfileActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        
        <activity
            android:name=".ui.activities.StatistiquesActivity"
            android:exported="false" />
        
        <activity
            android:name=".ui.activities.MonProgrammeDetailActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        
        <activity
            android:name=".ui.activities.ChatBotConversationsActivity"
            android:exported="false" />
        
        <activity
            android:name=".ui.activities.ChatBotActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        
        <activity
            android:name=".ui.activities.DiagnosticActivity"
            android:exported="false" />
        
        <activity
            android:name=".ui.activities.MessageActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        
        <activity
            android:name=".ui.activities.NavigationActivity"
            android:exported="false" />
        
        <activity
            android:name=".ui.activities.HomeDashboardActivity"
            android:exported="false" />
    </application>

</manifest>