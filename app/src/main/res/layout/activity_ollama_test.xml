<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/organic_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Retour" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:text="Test Assistant IA (Ollama)"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/organic_text_primary" />

        </LinearLayout>

        <!-- Status Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/ivStatusIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_circle"
                    android:tint="@color/organic_text_secondary" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvStatusTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Assistant IA"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/organic_text_primary" />

                    <TextView
                        android:id="@+id/tvStatusMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VÃ©rification en cours..."
                        android:textSize="14sp"
                        android:textColor="@color/organic_text_secondary" />

                    <TextView
                        android:id="@+id/tvModels"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textSize="12sp"
                        android:textColor="@color/organic_primary"
                        android:visibility="gone" />

                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:visibility="gone" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Actions -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Actions de Test"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/organic_text_primary"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnCheckStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="ðŸ” VÃ©rifier le Statut Ollama"
            android:textSize="16sp"
            android:padding="12dp"
            android:background="@drawable/button_primary"
            android:textColor="@color/white" />

        <!-- Test Generation Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test de GÃ©nÃ©ration"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/organic_text_primary"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="Message de test (optionnel)">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etTestPrompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:inputType="textMultiLine" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnTestGeneration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ§ª Tester la GÃ©nÃ©ration"
            android:textSize="16sp"
            android:padding="12dp"
            android:background="@drawable/button_secondary"
            android:textColor="@color/white" />

        <!-- Info Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/info_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â„¹ï¸ Informations"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/info_text"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â€¢ L'assistant IA utilise maintenant Ollama avec le modÃ¨le Mistral\nâ€¢ Traitement 100% local et gratuit\nâ€¢ RÃ©ponses plus rapides qu'OpenAI\nâ€¢ Fonctionne hors ligne"
                    android:textSize="14sp"
                    android:textColor="@color/info_text"
                    android:lineSpacingExtra="2dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>