<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- App Bar Layout with Collapsing Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="@color/organic_primary_bright"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:statusBarScrim="@color/organic_primary_bright">

            <!-- Hero Background with Gradient -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_hero_programme"
                app:layout_collapseMode="parallax">

                <!-- Floating Elements -->
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="80dp"
                    android:layout_marginEnd="40dp"
                    android:src="@drawable/ic_fitness_floating"
                    android:alpha="0.3"
                    android:rotation="15" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginStart="30dp"
                    android:src="@drawable/ic_star_floating"
                    android:alpha="0.2"
                    android:rotation="-20" />

                <!-- Programme Image -->
                <ImageView
                    android:id="@+id/ivProgrammeHero"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/programme1"
                    android:scaleType="centerCrop"
                    android:alpha="0.8" />

                <!-- Floating Stats -->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|start"
                    android:layout_marginStart="30dp"
                    android:layout_marginBottom="40dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="12dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvFloatingDays"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="28"
                            android:textColor="@color/organic_primary_bright"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="jours"
                            android:textColor="@color/organic_text_secondary"
                            android:textSize="12sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Floating Difficulty -->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="40dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="12dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â­â­â­"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Niveau"
                            android:textColor="@color/organic_text_secondary"
                            android:textSize="12sp"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </FrameLayout>

            <!-- Toolbar -->
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:navigationIcon="@drawable/ic_arrow_back_white"
                app:title="" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="100dp">

            <!-- Title Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/tvNom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Full Body No-Equip"
                        android:textColor="@color/organic_text_primary"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:letterSpacing="0.02" />

                    <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Programme full-body 30 minutes par jour, sans matÃ©riel."
                        android:textColor="@color/organic_text_secondary"
                        android:textSize="16sp"
                        android:layout_marginTop="12dp"
                        android:lineSpacingExtra="4dp"
                        android:gravity="center" />

                    <!-- Objective Pill -->
                    <TextView
                        android:id="@+id/tvObjectif"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ¯ Renforcer tout le corps Ã  domicile"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:background="@drawable/pill_objective"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="10dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Stats Grid - SUPPRIMÃ‰ -->

            <!-- Plats Section -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardPlats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ½ï¸"
                            android:textSize="24sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Plats recommandÃ©s (0)"
                            android:textColor="@color/organic_text_primary"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_marginStart="12dp" />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_arrow_forward"
                            android:tint="@color/organic_primary_bright" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@drawable/gradient_divider"
                        android:layout_marginVertical="16dp" />

                    <TextView
                        android:id="@+id/tvPlatsList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Aucun plat disponible"
                        android:textColor="@color/organic_text_secondary"
                        android:textSize="14sp"
                        android:lineSpacingExtra="4dp"
                        android:gravity="center"
                        android:padding="20dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ActivitÃ©s Section -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardActivites"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ’ª"
                            android:textSize="24sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ActivitÃ©s sportives (4)"
                            android:textColor="@color/organic_text_primary"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_marginStart="12dp" />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_arrow_forward"
                            android:tint="@color/organic_primary_bright" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@drawable/gradient_divider"
                        android:layout_marginVertical="16dp" />

                    <TextView
                        android:id="@+id/tvActivitesList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Liste des activitÃ©s"
                        android:textColor="@color/organic_text_primary"
                        android:textSize="14sp"
                        android:lineSpacingExtra="6dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Conseils Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ’¡"
                            android:textSize="24sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Conseils d'expert"
                            android:textColor="@color/organic_text_primary"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_marginStart="12dp" />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_arrow_forward"
                            android:tint="@color/organic_primary_bright" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@drawable/gradient_divider"
                        android:layout_marginVertical="16dp" />

                    <TextView
                        android:id="@+id/tvConseilsList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Conseils personnalisÃ©s pour optimiser vos rÃ©sultats"
                        android:textColor="@color/organic_text_primary"
                        android:textSize="14sp"
                        android:lineSpacingExtra="6dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabInscrire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="24dp"
        android:text="ðŸš€ Commencer maintenant"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="@color/organic_primary_bright"
        app:icon="@drawable/ic_play_arrow"
        app:iconTint="@color/white"
        app:cornerRadius="28dp"
        app:elevation="12dp" />

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:indeterminateTint="@color/organic_primary_bright" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
