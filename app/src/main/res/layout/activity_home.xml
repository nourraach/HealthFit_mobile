<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fresh_salad_background">

    <!-- Main Title - HealthFit -->
    <TextView
        android:id="@+id/tvAppName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="HealthFit"
        android:textColor="@color/fresh_salad_title"
        android:textSize="42sp"
        android:textStyle="bold"
        android:gravity="center"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Good Food, Stay Healthy"
        android:textColor="@color/fresh_salad_text_secondary"
        android:textSize="16sp"
        android:textStyle="normal"
        android:gravity="center"
        android:letterSpacing="0.05"
        app:layout_constraintTop_toBottomOf="@id/tvAppName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp" />

    <!-- Main Salad Image - Extra Large and Full Display -->
    <ImageView
        android:id="@+id/ivMainSalad"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/homesalad"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:contentDescription="Fresh Healthy Salad"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintBottom_toTopOf="@id/btnGetStarted"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp" />

    <!-- Floating vegetables around the salad -->
    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/apple_slice"
        android:rotation="15"
        app:layout_constraintTop_toTopOf="@id/ivMainSalad"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="80dp"
        android:layout_marginStart="30dp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/kiwi_slice"
        android:rotation="-20"
        app:layout_constraintTop_toTopOf="@id/ivMainSalad"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="25dp" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/grape_green"
        android:rotation="30"
        app:layout_constraintTop_toTopOf="@id/ivMainSalad"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="200dp"
        android:layout_marginStart="15dp" />

    <!-- Small parsley leaves -->
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/leaf_decoration"
        android:tint="@color/parsley_green"
        android:rotation="45"
        app:layout_constraintTop_toTopOf="@id/ivMainSalad"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="50dp" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/leaf_decoration"
        android:tint="@color/parsley_green"
        android:rotation="-60"
        app:layout_constraintTop_toTopOf="@id/ivMainSalad"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="160dp"
        android:layout_marginStart="50dp" />

    <!-- Additional vegetables for circular design -->
    <ImageView
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:src="@drawable/pear_half"
        android:rotation="10"
        app:layout_constraintBottom_toBottomOf="@id/ivMainSalad"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="100dp"
        android:layout_marginEnd="40dp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/grape_green"
        android:rotation="-15"
        app:layout_constraintBottom_toBottomOf="@id/ivMainSalad"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="80dp"
        android:layout_marginStart="60dp" />

    <!-- More water droplets around the image -->
    <ImageView
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:src="@drawable/ic_circle"
        android:tint="@color/water_droplet"
        android:alpha="0.6"
        app:layout_constraintTop_toTopOf="@id/ivMainSalad"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginStart="80dp" />

    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/ic_circle"
        android:tint="@color/water_droplet"
        android:alpha="0.4"
        app:layout_constraintTop_toTopOf="@id/ivMainSalad"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="70dp" />

    <ImageView
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:src="@drawable/ic_circle"
        android:tint="@color/water_droplet"
        android:alpha="0.5"
        app:layout_constraintBottom_toBottomOf="@id/ivMainSalad"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="90dp" />

    <!-- Get Started Button - Moved Higher -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGetStarted"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Get Started"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="@color/fresh_salad_title"
        app:cornerRadius="28dp"
        android:elevation="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="120dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp" />

</androidx.constraintlayout.widget.ConstraintLayout>