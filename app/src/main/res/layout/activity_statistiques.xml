<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/organic_background"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header -->
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:gravity="center_vertical"
            android:background="@drawable/bg_header_organic"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_revert"
                android:tint="@color/white"
                android:contentDescription="Retour" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Statistiques"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <!-- Programme Name -->
        <TextView
            android:id="@+id/tvProgrammeName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Programme Nom"
            android:textColor="@color/organic_text_primary"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="20dp"
            app:layout_constraintTop_toBottomOf="@id/header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Progression Globale Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardProgression"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/organic_surface"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvProgrammeName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š Score Global de Progression"
                    android:textColor="@color/organic_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="12dp">

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="67"
                        android:progressTint="@color/organic_primary" />

                    <TextView
                        android:id="@+id/tvProgressionGlobale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="67%"
                        android:textColor="@color/organic_primary"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_marginStart="12dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvJourActuel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jour 15/30"
                    android:textColor="@color/organic_text_secondary"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/tvJoursRestants"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15 jours restants"
                    android:textColor="@color/organic_text_secondary"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- DÃ©tails de Calcul -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardCalculProgression"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/organic_surface"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/cardProgression"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ§® Composition du Score"
                    android:textColor="@color/organic_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Le score global est calculÃ© selon 4 critÃ¨res:"
                    android:textColor="@color/organic_text_secondary"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp" />

                <!-- Taux de ComplÃ©tion (40%) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="16dp"
                    android:padding="12dp"
                    android:background="#E8F5E9">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="âœ… Taux de ComplÃ©tion"
                            android:textColor="@color/organic_text_primary"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvTauxCompletion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="80%"
                            android:textColor="@color/organic_primary"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Poids: 40% du score global"
                        android:textColor="@color/organic_text_secondary"
                        android:textSize="11sp"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jours complÃ©tÃ©s / Jours totaux du programme"
                        android:textColor="@color/organic_text_secondary"
                        android:textSize="11sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <!-- Taux de Repas (30%) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp"
                    android:padding="12dp"
                    android:background="#FFF3E0">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ½ï¸ Taux de Repas"
                            android:textColor="@color/organic_text_primary"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvTauxRepas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="70%"
                            android:textColor="@color/organic_primary"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Poids: 30% du score global"
                        android:textColor="@color/organic_text_secondary"
                        android:textSize="11sp"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Plats consommÃ©s / Plats attendus"
                        android:textColor="@color/organic_text_secondary"
                        android:textSize="11sp"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:id="@+id/tvTotalPlats"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="35 plats consommÃ©s"
                        android:textColor="@color/organic_text_primary"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- Taux d'ActivitÃ©s (20%) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp"
                    android:padding="12dp"
                    android:background="#E3F2FD">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ’ª Taux d'ActivitÃ©s"
                            android:textColor="@color/organic_text_primary"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvTauxActivites"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="60%"
                            android:textColor="@color/organic_primary"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Poids: 20% du score global"
                        android:textColor="@color/organic_text_secondary"
                        android:textSize="11sp"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ActivitÃ©s rÃ©alisÃ©es / ActivitÃ©s attendues"
                        android:textColor="@color/organic_text_secondary"
                        android:textSize="11sp"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:id="@+id/tvTotalActivites"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18 activitÃ©s rÃ©alisÃ©es"
                        android:textColor="@color/organic_text_primary"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- Ã‰volution Physique (10%) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp"
                    android:padding="12dp"
                    android:background="#F3E5F5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="âš–ï¸ Ã‰volution Physique"
                            android:textColor="@color/organic_text_primary"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvEvolutionPhysiqueDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="40%"
                            android:textColor="@color/organic_primary"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Poids: 10% du score global"
                        android:textColor="@color/organic_text_secondary"
                        android:textSize="11sp"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Progression poids / Objectif poids"
                        android:textColor="@color/organic_text_secondary"
                        android:textSize="11sp"
                        android:layout_marginTop="2dp" />

                    <!-- Poids Details -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="DÃ©but"
                                android:textColor="@color/organic_text_secondary"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/tvPoidsDebut"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="85.0 kg"
                                android:textColor="@color/organic_text_primary"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Actuel"
                                android:textColor="@color/organic_text_secondary"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/tvPoidsActuel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="82.0 kg"
                                android:textColor="@color/organic_primary"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Objectif"
                                android:textColor="@color/organic_text_secondary"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/tvPoidsObjectif"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="75.0 kg"
                                android:textColor="@color/organic_text_primary"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvEvolutionPoids"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-3.0 kg"
                        android:textColor="@color/organic_primary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Streak Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardStreak"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/organic_surface"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/cardCalculProgression"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”¥"
                    android:textSize="32sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Streak Actuel"
                        android:textColor="@color/organic_text_secondary"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvStreakActuel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7 jours"
                        android:textColor="@color/organic_primary"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:id="@+id/tvMeilleurStreak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Record: 12 jours"
                        android:textColor="@color/organic_text_secondary"
                        android:textSize="11sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Autres Stats -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardAutresStats"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/organic_surface"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/cardStreak"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ˆ Autres Statistiques"
                    android:textColor="@color/organic_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Calories moyennes/jour"
                        android:textColor="@color/organic_text_secondary"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvCaloriesMoyennes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1850 kcal"
                        android:textColor="@color/organic_text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Jours actifs"
                        android:textColor="@color/organic_text_secondary"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvJoursActifs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="24 jours"
                        android:textColor="@color/organic_text_primary"
