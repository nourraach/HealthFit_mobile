<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/organic_surface"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Image du plat -->
        <ImageView
            android:id="@+id/ivPlatImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/vegetables"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:contentDescription="Image du plat" />

        <!-- Nom du plat -->
        <TextView
            android:id="@+id/tvNom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nom du plat"
            android:textColor="@color/organic_text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Calories -->
        <TextView
            android:id="@+id/tvCalories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="350 cal"
            android:textColor="@color/organic_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="8dp" />

        <!-- Temps de préparation -->
        <TextView
            android:id="@+id/tvTemps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⏱️ 15 min"
            android:textColor="@color/organic_text_secondary"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginTop="4dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
