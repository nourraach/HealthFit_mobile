<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/organic_background"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header -->
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:gravity="center_vertical"
            android:background="@drawable/bg_header_organic"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_revert"
                android:tint="@color/white"
                android:contentDescription="Retour" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mon Programme"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <!-- Programme Info Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardProgramme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="@color/organic_surface"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/header"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tvProgrammeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Programme Nom"
                    android:textColor="@color/organic_text_primary"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description du programme"
                    android:textColor="@color/organic_text_secondary"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:id="@+id/tvDuree"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="DurÃ©e: 30 jours"
                        android:textColor="@color/organic_text_secondary"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvObjectif"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Objectif: Perte de poids"
                        android:textColor="@color/organic_text_secondary"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Progression -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Progression Globale"
                    android:textColor="@color/organic_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="62"
                        android:progressTint="@color/organic_primary" />

                    <TextView
                        android:id="@+id/tvProgression"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="62%"
                        android:textColor="@color/organic_primary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginStart="12dp" />
                </LinearLayout>

                <!-- Stats Mini -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:id="@+id/tvTauxCompletion"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ComplÃ©tion: 40%"
                        android:textColor="@color/organic_text_secondary"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tvTauxRepas"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Repas: 90%"
                        android:textColor="@color/organic_text_secondary"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tvTauxActivites"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ActivitÃ©s: 80%"
                        android:textColor="@color/organic_text_secondary"
                        android:textSize="11sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/tvStreak"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ”¥ SÃ©rie: 7 jours"
                        android:textColor="@color/organic_text_secondary"
                        android:textSize="11sp" />
                </LinearLayout>

                <!-- Poids -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:id="@+id/tvPoidsDebut"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="DÃ©but: 85.5kg"
                        android:textColor="@color/organic_text_secondary"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvPoidsActuel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Actuel: 82.3kg"
                        android:textColor="@color/organic_primary"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvPoidsObjectif"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Objectif: 75.0kg"
                        android:textColor="@color/organic_text_secondary"
                        android:textSize="12sp" />
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnVoirStatistiques"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Voir Statistiques DÃ©taillÃ©es"
                    android:textColor="@color/organic_primary"
                    app:strokeColor="@color/organic_primary"
                    app:cornerRadius="8dp"
                    android:layout_marginTop="16dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Date Selector -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/organic_surface"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/cardProgramme"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸ“… 2025-12-01"
                    android:textColor="@color/organic_text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDatePicker"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Changer"
                    android:textColor="@color/organic_primary" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Statut du Jour -->
        <TextView
            android:id="@+id/tvStatutJour"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="âš ï¸ JournÃ©e partielle"
            android:textColor="@color/organic_text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/cardDate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Calories & Poids -->
        <LinearLayout
            android:id="@+id/layoutStats"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvStatutJour"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvCalories"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Calories: 0 kcal"
                android:textColor="@color/organic_text_secondary"
                android:textSize="14sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEnregistrerPoids"
                style="@style/Widget.Material3.Button.TextButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âš–ï¸ Poids"
                android:textColor="@color/organic_primary" />
        </LinearLayout>

        <!-- Plats Section -->
        <TextView
            android:id="@+id/tvPlatsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ½ï¸ Repas du Programme"
            android:textColor="@color/organic_text_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/layoutStats"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvPlatsSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Cochez les repas que vous avez consommÃ©s aujourd'hui"
            android:textColor="@color/organic_text_secondary"
            android:textSize="12sp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvPlatsTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- âœ… NOUVEAU: Message d'aide si aucun plat -->
        <TextView
            android:id="@+id/tvPlatsEmpty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="âš ï¸ Aucun plat trouvÃ© dans ce programme.\nVÃ©rifiez votre connexion ou contactez le support."
            android:textColor="@color/organic_text_secondary"
            android:textSize="14sp"
            android:gravity="center"
            android:padding="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/tvPlatsSubtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- âœ… NOUVEAU: Boutons de sÃ©lection rapide pour les plats -->
        <LinearLayout
            android:id="@+id/layoutPlatsActions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvPlatsEmpty"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnToutSelectionnerPlats"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="âœ… Tout"
                android:textColor="@color/organic_primary"
                android:textSize="12sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnToutDeselectionnerPlats"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="âŒ Rien"
                android:textColor="@color/organic_text_secondary"
                android:textSize="12sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSelectionnerPetitDej"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸŒ… P.Dej"
                android:textColor="@color/organic_primary"
                android:textSize="12sp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPlats"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="8dp"
            android:nestedScrollingEnabled="false"
            app:layout_constraintTop_toBottomOf="@id/layoutPlatsActions"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- ActivitÃ©s Section -->
        <TextView
            android:id="@+id/tvActivitesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ’ª ActivitÃ©s du Programme"
            android:textColor="@color/organic_text_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/rvPlats"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvActivitesSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Cochez les activitÃ©s que vous avez rÃ©alisÃ©es aujourd'hui"
            android:textColor="@color/organic_text_secondary"
            android:textSize="12sp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvActivitesTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- âœ… NOUVEAU: Message d'aide si aucune activitÃ© -->
        <TextView
            android:id="@+id/tvActivitesEmpty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="âš ï¸ Aucune activitÃ© trouvÃ©e dans ce programme.\nVÃ©rifiez votre connexion ou contactez le support."
            android:textColor="@color/organic_text_secondary"
            android:textSize="14sp"
            android:gravity="center"
            android:padding="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/tvActivitesSubtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- âœ… NOUVEAU: Boutons de sÃ©lection rapide pour les activitÃ©s -->
        <LinearLayout
            android:id="@+id/layoutActivitesActions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvActivitesEmpty"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnToutSelectionnerActivites"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="âœ… Tout"
                android:textColor="@color/organic_primary"
                android:textSize="12sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnToutDeselectionnerActivites"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="âŒ Rien"
                android:textColor="@color/organic_text_secondary"
                android:textSize="12sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSelectionnerCardio"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸƒ Cardio"
                android:textColor="@color/organic_primary"
                android:textSize="12sp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvActivites"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="8dp"
            android:nestedScrollingEnabled="false"
            app:layout_constraintTop_toBottomOf="@id/layoutActivitesActions"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- âœ… BOUTON PRINCIPAL: Enregistrer ma journÃ©e -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEnregistrerJournee"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="âœ… ENREGISTRER MA JOURNÃ‰E"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="@color/organic_primary"
            android:textColor="@color/white"
            app:cornerRadius="12dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="32dp"
            app:layout_constraintTop_toBottomOf="@id/rvActivites"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Loading -->
        <ProgressBar
            android:id="@+id/progressBarLoading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:indeterminateTint="@color/organic_primary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
